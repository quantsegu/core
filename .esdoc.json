{
    "source": "./src",
    "includes": [
        "^main/platform/browser/Nimiq.js$",
        "^main/generic/"
    ],
    "destination": "./dist/doc",
    "plugins": [
        {
            "name": "esdoc-standard-plugin",
            "option": {
                "test": {
                    "source": "./src/test/"
                },
                "manual": {"files": []},
                "brand": {},
                "unexportedIdentifier": {"enable": true},
                "accessor": {"access": ["public", "protected"], "autoPrivate": true}
            }
        }
    ]
}
